<%= form_for @events do |f| %>
  <%= f.label :date %>
  <%= f.date_field :date %><br>

  <%= f.label :description %>
  <%= f.text_field :description %><br>

  <%= f.label "requires_id" %>
  <%= f.check_box :requires_id %><br>

  <%= f.label :capacity %>
  <%= f.text_field :capacity %><br>

  <%= f.label :directions %>
  <%= f.text_area :directions %><br>

  <%= f.submit  %>

<% end %>
